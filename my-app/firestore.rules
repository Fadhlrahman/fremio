rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Custom frames collection - allow all for development
    match /custom_frames/{frameId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // All users collection (for admin analytics)
    match /fremio_all_users/{userId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }
    
    // Contact messages
    match /contactMessages/{messageId} {
      allow create: if true;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Frames collection (legacy)
    match /frames/{frameId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }
    
    // Analytics - Sessions (track unique users)
    match /analytics_sessions/{sessionId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;  // Allow admin to reset
    }
    
    // Analytics - Events (funnel tracking)
    match /analytics_events/{eventId} {
      allow read: if true;
      allow create: if true;
      allow update: if false;
      allow delete: if true;  // Allow admin to reset
    }
    
    // Analytics - Daily aggregates
    match /analytics_daily/{dateId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;  // Allow admin to reset
    }
  }
}
