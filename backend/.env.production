# ================================================
# FREMIO BACKEND - PRODUCTION CONFIGURATION
# ================================================

PORT=3000
NODE_ENV=production

# Frontend URL (replace with your production domain)
FRONTEND_URL=https://fremio.id

# Database (PostgreSQL) - Replace with your production DB
DATABASE_URL=postgresql://fremio_user:YOUR_SECURE_PASSWORD@localhost:5432/fremio
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fremio
DB_USER=fremio_user
DB_PASSWORD=YOUR_SECURE_PASSWORD

# JWT Configuration - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=7d

# API Host (for image URL generation)
API_HOST=api.yourdomain.com

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_IMAGE_SIZE=5242880
MAX_VIDEO_SIZE=52428800

# Temp File Cleanup
TEMP_FILE_CLEANUP_HOURS=24

# SSL/HTTPS (set to false if using reverse proxy like nginx)
USE_HTTPS=false

# ImageKit (if using external image storage)
# IMAGEKIT_PUBLIC_KEY=your_public_key
# IMAGEKIT_PRIVATE_KEY=your_private_key
# IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id
